#include<iostream>
#include<string>


int main()
{
	float var = 8;

	float* ptr = &var;
	//*ptr = 10;
	
	std::cout << &var << std::endl;
	std::cout << var << std::endl;
	std::cout << "====================" << std::endl;
	std::cout << ptr << std::endl;
	std::cout << &ptr << std::endl;
	std::cout << *ptr << std::endl;
	std::cout << *ptr * 8 <<" <-- multiplicacion de valor que apunta el puntero por 8 "<< std::endl;
	std::cout << (*ptr) <<" <-- valor de lo que apunta el puntero " << std::endl;
	std::cout << sizeof(*ptr) <<" <-- tama"<<char(164)<<"o del puntero en bytes "<< std::endl;
	
	for (int i = 0; i < *ptr; ++i) 
	{
		std::cout << i * *ptr<<',';

	}

	std::cin.get();

	return 0;
}
